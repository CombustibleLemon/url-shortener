@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Dan Leonard's URL Shortener</h1>
    <p class="lead">Shorten your URLs with a fancy <code>r.danleonard.us</code> domain!</p>
    <asp:form autocomplete="off" name="url-shortener">
        <h2>Shorten a URL</h2>
        <div class="input-group">
            <asp:input type="url" id="url-box" title="Enter the URL to be shortened here" class="form-control" placeholder="https://goatse.cx/" />
            <span class="input-group-btn">
                <asp:button class="btn btn-primary" type="button">Shorten</asp:button>
            </span>
        </div>
    </asp:form>
</div>